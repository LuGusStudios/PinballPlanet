<?xml version="1.0" encoding="utf-8"?>

<Challenges>

  <Challenge>
    <ID>Score3000</ID>
    <TextKey>Score more than 3000 points.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>3000</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Score5000LvlPirate</ID>
    <Stars>3</Stars>
    <Level>Pirate</Level>
    <TextKey>Score more than 5000 points in the pirate level.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>5000</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
    <Condition>
      <Type>Level</Type>
      <Parameters>
        <Name>Pinball_Pirate</Name>
        <Comparer>Equal</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>BallsLost3</ID>
    <TextKey>Lose 3 balls in a single level.</TextKey>
    <Condition>
      <Type>BallsInPlay</Type>
      <Parameters>
        <Value>0</Value>
        <Comparer>Equal</Comparer>
        <CountToMeet>3</CountToMeet>
        <CountChangedOnly>true</CountChangedOnly>
        <LevelLoadReset>true</LevelLoadReset>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Multiball1</ID>
    <TextKey>Get a multiball.</TextKey>
    <Condition>
      <Type>BallsInPlay</Type>
      <Parameters>
        <Value>3</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Score6000</ID>
    <TextKey>Score more than 6000 points.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>6000</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

