<?xml version="1.0" encoding="utf-8"?>

<Challenges>

  <Challenge>
    <ID>ClickChallengesButton</ID>
    <Stars>10</Stars>
    <TextKey>Click the challenges button.</TextKey>
    <Condition>
      <Type>ButtonPressed</Type>
      <Parameters>
        <ButtonName>Button_Trophy</ButtonName>
        <MeetOnce>true</MeetOnce>
      </Parameters>
    </Condition>
  </Challenge>
  
  <Challenge>
    <ID>500PointsLeftFlipper</ID>
    <TextKey>Get 500 points using only the left flipper.</TextKey>
    <!--<Condition>
      <Type>ObjectHit</Type>
      <Parameters>
        <ObjectName>Right_Paddle</ObjectName>
        <ShouldHit>false</ShouldHit>
        <LevelLoadReset>true</LevelLoadReset>
      </Parameters>
    </Condition>-->
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>499</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>NoHitCannon</ID>
    <TextKey>Finish the pirate level without using the cannon.</TextKey>
    <Level>Pirate</Level>
    <Condition>
      <Type>ObjectHit</Type>
      <Parameters>
        <ObjectName>ShipCannon</ObjectName>
        <ShouldHit>false</ShouldHit>
        <LevelLoadReset>true</LevelLoadReset>
      </Parameters>
    </Condition>
    <Condition>
      <Type>BallCount</Type>
      <Parameters>
        <Value>0</Value>
        <Comparer>Equal</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Score3000</ID>
    <TextKey>Score more than 3000 points.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>2999</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Score5000LvlPirate</ID>
    <Stars>3</Stars>
    <Level>Pirate</Level>
    <TextKey>Score more than 5000 points in the pirate level.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>4999</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
    <Condition>
      <Type>Level</Type>
      <Parameters>
        <Name>Pinball_Pirate</Name>
        <Comparer>Equal</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>BallsLost3</ID>
    <TextKey>Lose 3 balls in a single level.</TextKey>
    <Condition>
      <Type>BallsInPlay</Type>
      <Parameters>
        <Value>0</Value>
        <Comparer>Equal</Comparer>
        <CountToMeet>3</CountToMeet>
        <CountChangedOnly>true</CountChangedOnly>
        <LevelLoadReset>true</LevelLoadReset>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Multiball1</ID>
    <TextKey>Get a multiball.</TextKey>
    <Condition>
      <Type>BallsInPlay</Type>
      <Parameters>
        <Value>3</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>

  <Challenge>
    <ID>Score6000</ID>
    <TextKey>Score more than 6000 points.</TextKey>
    <Condition>
      <Type>Score</Type>
      <Parameters>
        <Value>6000</Value>
        <Comparer>Greater</Comparer>
      </Parameters>
    </Condition>
  </Challenge>
  
  <Challenge>
    <ID>HitCrystal</ID>
    <TextKey>Collect 10 crystal shards.</TextKey>
    <Level>Mine</Level>
    <Condition>
      <Type>ObjectHit</Type>
      <Parameters>
        <ObjectName>CrystalShard_Parent</ObjectName>
        <CountToMeet>10</CountToMeet>
      </Parameters>
    </Condition>
  </Challenge>

